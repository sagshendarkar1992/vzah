    title: {
        text: '@Model.LST[0].TITLE'
    },
    subtitle: {
        text: '@Model.LST[0].SUBTITLE'
    },
    xAxis: {
        categories: [@Html.Raw(Model.LST[0].CATEGORIES)],
        crosshair: true
    },
    yAxis: {
        min: 0,
        title: {
            text: '@Model.LST[0].YAXISLABEL'
        }
    },
           tooltip: @Html.Raw(Model.LST[0].tooltip),
