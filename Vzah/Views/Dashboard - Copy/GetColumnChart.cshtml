           //    footerFormat: '</table>',
           //    shared: true,
           //    useHTML: true
           //},
    plotOptions: @Html.Raw(Model.LST[0].plotOptions),
           series: [@Html.Raw(Model.LST[0].LABELVALUE)],

       });

