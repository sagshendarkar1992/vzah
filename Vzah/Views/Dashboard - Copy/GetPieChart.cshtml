@model ModelPortal.DashboardModel.DashboardConfig
@{
    Layout = null;
}

<div class="ibox-title">
    <h5>@Model.LST[0].NAME</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
</div>
<div class="ibox-content">
    <div id="@Model.LST[0].NAME" class="HighCharts_Configure_@Model.LST[0].ID" style="height:310px;"></div>
</div>

<script>
     $(document).ready(function () {
  Highcharts.chart('@Model.LST[0].NAME', {
            chart: {
                type: 'pie',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }
            },
            exporting: { enabled: false },
            title: {
                text: '@Model.LST[0].TITLE'
            },
            subtitle: {
                text: '@Model.LST[0].SUBTITLE'
            },
            plotOptions: {
                pie: {
                    //innerSize: 50,
                    depth: 35,
                    colors: ["#f8ac59"]
                },
                series: {
                    dataLabels: {
                        enabled: true,
                        style: {
                            fontWeight: '10',
                        }
                    },
                    point: {
                        events: {
                            click: function (event) {
                                //alert(this.name);
                                //ViewWarningDetails(this.name);
                                //ViewWarningDetails(this.options.y);
                            }

                        }
                    }
                }
            },
            series: [{
                //name: 'Delivered amount',
                data: [@Html.Raw(Model.LST[0].LABELVALUE)
                    //['Bananas', 8],
                    //['Kiwi', 3],
                    //['Mixed nuts', 1],
                    //['Oranges', 6],
                    //['Apples', 8],
                    //['Pears', 4],
                    //['Clementines', 4],
                    //['Reddish (bag)', 1],
                    //['Grapes (bunch)', 1]
                ]
            }]
  });

  $("#@Model.LST[0].NAME").highcharts().setSize($("#@Model.LST[0].ID").parent().width() - 50, $("#@Model.LST[0].ID").parent().height() - 100, false);

     });
</script>




