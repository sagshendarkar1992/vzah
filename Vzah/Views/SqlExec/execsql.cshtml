@using System.Data;
@{
    ViewBag.Title = "execsql";
    Layout = null;
}

<h2>Output</h2>


@if (ViewBag.typ == "err")
{
    @ViewBag.err
}

@if (ViewBag.typ == "dt")
{
    foreach (DataTable tbl in ViewBag.ds.Tables)
    {
        <div class="space-8"></div>
        <div class="table-responsive col-sm-12 col-xs-12">
            <div style="position: relative; opacity: 1; left: 0px; top: 0px;" class="widget-box">
                <div title="abc" data-placement="top" data-toggle="tooltip" class="widget-header">
                    <h5>
                        Total Records : @tbl.Rows.Count
                    </h5>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="icon-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="widget-body">
                    <div class="widget-main" style="overflow:auto;">
                        <table class="table table-striped table-bordered table-hover">
                            <thead><tr>@foreach (DataColumn col in tbl.Columns){<th>@col.ColumnName</th>}</tr></thead>
                            <tbody>@foreach (DataRow row in tbl.Rows){<tr>@foreach (DataColumn col in tbl.Columns){<td>@row[col.ColumnName]</td>}</tr>}</tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

}   