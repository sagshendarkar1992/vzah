@model  ModelPortal.Account.UserProfile
@{
    ViewBag.Title = "AccProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/assets/css/bootstrap-editable.css" rel="stylesheet" />
}

<div id="DivTicketBreadCrum" class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Profile</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Profile</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">


    <div class="row m-b-lg m-t-lg">
        <div class="col-md-6">
            
            <div class="profile-image">
                <img src="@Model.IMGDESC" alt="@Model.NAME's Avatar" class="rounded-circle circle-border m-b-md" id="avatar">
            </div>
            <div class="profile-info">
                <div class="">
                    <div>
                        <h2 class="no-margins">
                            @Model.NAME (@Model.LOGINID)
                        </h2>
                        <h4>@Model.UGRPDESC</h4>
                        @*<small>
                            There are many variations of passages of Lorem Ipsum available, but the majority
                            have suffered alteration in some form Ipsum available.
                        </small>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <table class="table small m-b-xs">
                <tbody>
                    <tr>
                        <td>
                            <strong>Username : </strong> @Model.NAME
                        </td>
                        <td>
                            <strong>User Type : </strong> @Model.UGRPDESC
                        </td>

                    </tr>
                    <tr>
                        <td>
                            <strong>Time Zone : </strong> @Model.TMZONEDESC
                        </td>
                        <td>
                            @if (Model.UTYPEID != 5)
                            {
                                <strong>Mobile No. : </strong>@Model.MobileNo
                            }
                        </td>
                    </tr>
                    @*<tr>
                        <td>
                            <strong>154</strong> Tags
                        </td>
                        <td>
                            <strong>32</strong> Friends
                        </td>
                    </tr>*@
                </tbody>
            </table>
        </div>
        @*<div class="col-md-3">
            <small>Sales in last 24h</small>
            <h2 class="no-margins">206 480</h2>
            <div id="sparkline1"></div>
        </div>*@
    </div>
</div>

